import("$build_root/toolchain/gcc_toolchain.gni")

clang_toolchain("clang_arm") {
  toolchain_args = {
    current_cpu = "arm"
    current_os = "linux"
  }
  executable_extension = ""
  shlib_extension = ".so"
}

clang_toolchain("clang_arm64") {
  toolchain_args = {
    current_cpu = "arm64"
    current_os = "linux"
