  toolchain_args = {
    current_cpu = "riscv64"
    current_os = "linux"
  }
  executable_extension = ""
  shlib_extension = ".so"
}

gcc_toolchain("riscv64") {
  toolprefix = "riscv64-linux-gnu-"

  cc = "${toolprefix}gcc"
  cxx = "${toolprefix}g++"

  ar = "${toolprefix}ar"
  ld = cxx

  toolchain_args = {
    current_cpu = "riscv64"
    current_os = "linux"
    is_clang = false
  }
}

